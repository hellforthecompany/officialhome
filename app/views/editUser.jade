extends layout
block content
	link(rel="stylesheet" type="text/css" href="/css/editUser.css")
	.edit-user
		h3 Edit User
		a(href="/manageUsers" class="manage-users") Manage Users
		form(id="edit-user-form" action="/users/:user_id" method="put" accept-charset="utf-8" ajax="true")
			h3 Email
			input(class="email" type="text" name="email" accept-charset="utf-8" ajax="true" placeholder="Email")
			h3 First Name
			input(class="name" type="text" name="name" accept-charset="utf-8" ajax="true" placeholder="No Name")
			h3 User Type
			input(class="type" type="text" name="type" accept-charset="utf-8" ajax="true" placeholder="User Type")
			h3.change-password Change Password
				input(class="password" type="password" name="password" accept-charset="utf-8" ajax="true" placeholder="Password")
				input(class="password-confirm" type="text" name="passwordConfirm" accept-charset="utf-8" ajax="true" placeholder="Confirm Password")
			input(class="btn" type="submit" value="Edit User")
		a(class="delete-user" href="/deleteUser") Delete User
	script(src="/js/editUser.js")